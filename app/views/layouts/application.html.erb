<!DOCTYPE html>
<html>
<head>
  <title>Polylit</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "flash/errors" %>
  <%= render "flash/success" %>
  <%= yield %>

  <% if logged_in? %>
    <p>Welcome, <%= current_author.username %></p>
  <% else %>
    <p>Sign in!</p>
  <% end %>
</body>
</html>
